{
	"name": "sharecode",
	"version": "0.1.0",
	"private": true,
	"author": "ismailgunayy",
	"description": "A real-time code sharing platform for developers",
	"license": "MIT",
	"scripts": {
		"dev": "turbo run dev",
		"dev:client": "turbo run dev --filter client",
		"dev:server": "turbo run dev --filter server",
		"clean": "rimraf .turbo out; turbo clean",
		"build": "turbo run build",
		"build:client": "turbo run build --filter client",
		"build:server": "turbo run build --filter server",
		"start": "turbo run start",
		"start:client": "turbo run start --filter client",
		"start:server": "turbo run start --filter server",
		"lint": "turbo run lint",
		"check-types": "turbo run check-types",
		"format": "prettier --write \"**/*.{ts,tsx,css,json,md}\""
	},
	"devDependencies": {
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"turbo": "^2.4.4",
		"typescript": "5.8.2"
	},
	"engines": {
		"node": "22.x"
	},
	"packageManager": "yarn@1.22.22",
	"workspaces": [
		"apps/*"
	]
}
